extends layout/main

block variables
	- var title = 'Main page'
	- var mainpage = false

block content
	mixin li(name)
		li(class= 'test '+name)= name
	ul
		+li('name1')
		+li('name2')

	if(mainpage)
		+li('name3')


	mixin news(title)
		span.news-title= title
		.news-text
			if block
				block
			else
				p Empty news

	+news('Новость без текста')
	+news('Новость с текстом')
		p новость

	mixin link(href,name)
		a(href= href)= name

	+link('google.com', 'Google')

	mixin list(classname,...items)
		ul(class='' +classname)
			each item in items
				li(class='socail-link socail-link__' +item)= item

	+list('list1','vk','fb','tw','inst')

	mixin item(link,title)
		if(title === 'link1')
			li.main-nav__item.main-nav__item-active
				a(href=link).main-nav__link=title
		else
			li.main-nav__item
				a(href=link).main-nav__link=title

	ul.main-nav
		+item('','link1')
		+item('','link2')
		+item('','link3')